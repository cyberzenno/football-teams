@using FootballTeams.Web.Models.ViewModels;
@model TeamMemberViewModel
@{
    ViewBag.Title = "Player Details";

    var dateOfBirth = Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("dd/MM/yyyy") : "na";
}

<h1>@Model.Fullname</h1>
<p>@Model.Role</p>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Details</h5>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Current Team</td>
                            <td>
                                @if (Model.Team != null)
                                {
                                    <a href="@Url.Action("Details","Team",new { id=Model.Team.Id})">@Model.Team.Name</a>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Position</td>
                            <td>@Model.Position</td>
                        </tr>
                        <tr>
                            <td>Age</td>
                            <td>@Model.Age()</td>
                        </tr>
                        <tr>
                            <td>Date of birth</td>
                            <td>@dateOfBirth</td>
                        </tr>
                        <tr>
                            <td>Nationality</td>
                            <td>@Model.Nationality</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-body"></div>
        </div>
    </div>
    <div class="col-md-6"></div>
</div>

