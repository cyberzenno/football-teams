@using FootballTeams.Web.Models.ViewModels;
@model FootballTeams.Web.Models.ViewModels.TeamMemberViewModel
@{
    ViewBag.Title = "Register Manager";
}

<form method="post" action="@Url.Action("Register")">

    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <h1>Register Manager</h1>

            <div class="form-group">
                <label>Fullname</label>
                <input class="form-control" type="text" placeholder="Fullname" name="Fullname" />
            </div>
            <div class="form-group">
                <label>Nationality</label>
                <input class="form-control" type="text" placeholder="Nationality" name="Nationality" />
            </div>
            <div class="form-group">
                <label>Date of birth</label>
                <input class="form-control" type="date" name="DateOfBirth">
            </div>

            <div class="form-group row">
                <label>Role</label>
                <div class="col">
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="role-none" name="Role" value="0" disabled>
                        <label class="custom-control-label" for="role-none">None</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="role-player" name="Role" value="1" disabled>
                        <label class="custom-control-label" for="role-player">Player</label>
                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="role-manager" name="Role" value="2" checked>
                        <label class="custom-control-label" for="role-manager">Manager</label>
                    </div>
                </div>
                <div class="col"></div>
            </div>
            <button class="btn btn-info" type="submit">Save</button>

        </div>
        <div class="col-md-6">
            <h1>Team</h1>
            <label>Please select the team to join (wip)</label>
            <select class="form-control" name="TeamId">

                <option value="">No Team</option>

                @foreach (TeamViewModel team in ViewBag.AvailableTeams)
                {
                    <option value="@team.Id">@team.Name</option>
                }

            </select>
        </div>
    </div>

</form>

